<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/score"
    tools:context="com.example.shatu.quiz.Score">

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_total"
        android:layout_marginTop="100dp"
        android:text="Total Question: "
        android:textSize="25dp"
        android:textColor="#000"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_correct"
        android:layout_below="@+id/tv_total"
        android:layout_marginTop="30dp"
        android:text="Correct Answer: "
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#0a6c04"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_wrong"
        android:layout_below="@+id/tv_correct"
        android:layout_marginTop="30dp"
        android:text="Wrong Answer: "
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#fc0206"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_score"
        android:layout_below="@+id/tv_wrong"
        android:layout_marginTop="35dp"
        android:text="SCORE: "
        android:textSize="35dp"
        android:textStyle="bold"
        android:textColor="#011250"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/total"
        android:layout_marginTop="90dp"
        android:layout_toRightOf="@+id/tv_total"
        android:text="0"
        android:textSize="50dp"
        android:textColor="#000"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/correct"
        android:layout_below="@+id/tv_total"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/tv_correct"
        android:text="0"
        android:textSize="50dp"
        android:textColor="#0a6c04"
        android:textStyle="bold"/>

    <TextView
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:id="@+id/wrong"
    android:layout_below="@+id/tv_correct"
    android:layout_marginTop="20dp"
    android:layout_toRightOf="@+id/tv_wrong"
    android:text="0"
    android:textSize="50dp"
    android:textColor="#fc0206"
    android:textStyle="bold"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/score"
        android:layout_below="@+id/tv_wrong"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/tv_score"
        android:text="0"
        android:textSize="60dp"
        android:textColor="#011250"
        android:textStyle="bold"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ok"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="OK"
        android:textColor="#f46905"
        android:textSize="25dp"
        android:textStyle="bold"
        android:onClick="onOkButtonClick"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/comment"
        android:text="Comment"
        android:textColor="#a4079a"
        android:textSize="25dp"
        android:textStyle="italic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp"/>


</RelativeLayout>

