<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.shatu.quiz.Start">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Which programming language is the best ?"
        android:textColor="#FFFF"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:id="@+id/tvQuestion"
        android:layout_marginTop="100dp"
        android:background="#000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Question"
        android:textColor="#000"
        android:textSize="17dp"
        android:id="@+id/textView2"/>

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:id="@+id/question"
        android:layout_below="@+id/textView2"
        android:text="0"
        android:textSize="50dp"
        android:textColor="#000"/>


    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Correct"
        android:textSize="17dp"
        android:textColor="#06dc03"
        android:id="@+id/textView3"
        android:layout_toRightOf="@+id/textView2"/>

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:id="@+id/correct"
        android:layout_below="@+id/textView3"
        android:layout_toRightOf="@+id/question"
        android:text="0"
        android:textSize="50dp"
        android:textColor="#06dc03"/>

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Wrong"
        android:textSize="17dp"
        android:textColor="#f70303"
        android:id="@+id/textView4"
        android:layout_toRightOf="@+id/textView3"/>

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:id="@+id/wrong"
        android:layout_below="@+id/textView4"
        android:layout_toRightOf="@+id/correct"
        android:text="0"
        android:textSize="50dp"
        android:textColor="#f70303"/>

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="SCORE"
        android:textSize="17dp"
        android:textColor="#0606e2"
        android:id="@+id/textView5"
        android:layout_alignParentRight="true"/>

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:id="@+id/score"
        android:layout_below="@+id/textView5"
        android:layout_alignParentRight="true"
        android:text="0"
        android:textSize="50dp"
        android:textColor="#0606e2"/>



    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rg"
        android:background="#b4f1ed"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tvQuestion">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/a"
            android:text="JAVA" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/b"
            android:text="C"
            android:layout_below="@+id/a"
            android:layout_marginTop="10dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/c"
            android:text="C++"
            android:layout_below="@+id/b"
            android:layout_marginTop="10dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/d"
            android:text="C#"
            android:layout_below="@+id/c"
            android:layout_marginTop="10dp" />

    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/submit"
        android:layout_below="@+id/rg"
        android:text="SUBMIT"
        android:layout_marginTop="20dp"
        android:textColor="#13037e"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:onClick="onSubmitButtonClick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/end"
        android:layout_below="@+id/submit"
        android:text="END"
        android:layout_marginTop="5dp"
        android:textColor="#f50101"
        android:textSize="20dp"
        android:textStyle="italic"
        android:layout_centerHorizontal="true"
        android:onClick="onEndButtonClick"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#0606e2"
        android:id="@+id/textView6"
        android:layout_below="@+id/submit"
        android:layout_centerHorizontal="true"/>



</RelativeLayout>
